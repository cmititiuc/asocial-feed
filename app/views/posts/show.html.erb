<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <% doc = RedCloth.new(@post.body); doc.filter_html = true %>
  <%= doc.to_html.html_safe %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tags.map(&:name).join(', ') %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
